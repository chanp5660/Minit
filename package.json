{
  "name": "even5minutes",
  "version": "1.1.0",
  "description": "Even5Minutes - 5분만이라도 집중하자",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "version:patch": "npm version patch && node scripts/update-version.js",
    "version:minor": "npm version minor && node scripts/update-version.js",
    "version:major": "npm version major && node scripts/update-version.js"
  },
  "keywords": [
    "even5minutes",
    "timer",
    "productivity",
    "time-tracking"
  ],
  "author": "Chan Park",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.294.0"
  },
  "build": {
    "appId": "com.even5minutes.app",
    "productName": "Even5Minutes",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
